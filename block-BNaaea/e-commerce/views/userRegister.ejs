<%- include('partials/header') -%>

    <main>
      <div class="register">
        <h1 class="text-center red fs-40 padding-3-0">Register User</h1>
        <form action="/users/register" method="post" class="width-300 margin-3-0">
            <fieldset>
                <% if(error){ %>
                    <p class="red text-center"><%= error %></p>
                <% }%>
                <input class="form-control" type="text" name="name" id="" placeholder="enter name">
                <input class="form-control" type="email" name="email" id="" placeholder="enter email">
                <input class="form-control" type="password" name="password" id="" placeholder="enter password">
                <label for="true">isAdmin: true</label>
                <input type="radio" name="isAdmin" value="true" id="true">
                <label for="false">false</label>
                <input type="radio" name="isAdmin" value="false" id="false">
                <input class="form-control" type="number" name="phone" id="" placeholder="enter phone number">
                <input class="form-control" type="submit" value="register user">
            </fieldset>
        </form>
      </div>
    </main>
<%- include('partials/footer') -%>
